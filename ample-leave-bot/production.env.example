# Production Environment Configuration
# Copy to .env and fill in your actual values

# Application
NODE_ENV=production
PORT=3000

# Database (PostgreSQL with pgvector)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=ample_leave_bot
DATABASE_URL=postgresql://postgres:your-secure-password-here@db:5432/ample_leave_bot

# Redis (for caching and rate limiting)
REDIS_URL=redis://redis:6379

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=30000

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_TEAM_ID=your-team-id

# Admin Authentication
ADMIN_TOKEN=your-super-secure-admin-token-here

# RAG Configuration
USE_RAG=true
RAG_REBUILD_ON_START=false  # Set to false in production for faster startup
CHUNK_SIZE=2000
CHUNK_OVERLAP=300
TOP_K=10
DEFAULT_COUNTRY=IN
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536

# Performance Tuning
UV_THREADPOOL_SIZE=128
NODE_OPTIONS="--max-old-space-size=4096 --max-semi-space-size=128"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Monitoring
GRAFANA_PASSWORD=your-secure-grafana-password
PROMETHEUS_RETENTION=30d

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000
